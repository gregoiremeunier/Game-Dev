function hdoor_room1_Interact()
{
     if (key1 == true)
     {
       Display("The door opens with a creaking");
       player.ChangeRoom(2, 216, 290, eDirectionDown);
     }
     
     if (key1 == false)
     {
       Display("The door is locked");
     }
}

