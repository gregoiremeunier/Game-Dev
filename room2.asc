// room script file
bool key_lv1;
bool key_lv2;
bool key_End;

function room_FirstLoad()
{
  key_lv1 = false;
  key_lv2 = false;
  key_End = false;
}

function hDoor_intro_Interact()
{
  player.FaceDirection(eDirectionUp);
  player.ChangeRoom(1, 1066, 350, eDirectionDown);
}

function hDoor_Lv1_Interact()
{
  player.FaceDirection(eDirectionUp);
       if (key_lv1 == true)
     {
       player.ChangeRoom(3, 415, 354, eDirectionDown);
     }
     
     if (key_lv1 == false)
     {
       Display("The door is lock");
     }
}

function hDoor_Lv2_Interact()
{
  player.FaceDirection(eDirectionUp);
       if (player.HasInventory(iKey3))
     {
       Display("The door is open now");
       player.ChangeRoom(4, 1128, 415, eDirectionDown);
     }
     
     else
     {
       Display("The door is lock");
     }
}

function hDoor_End_Interact()
{
  player.FaceDirection(eDirectionUp);
       if (key_End == true)
     {
       player.ChangeRoom(3, 216, 290, eDirectionDown);
     }
     
     if (key_End == false)
     {
       Display("The door is lock");
     }
}

